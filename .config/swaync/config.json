{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-margin-top": 10,
  "control-center-margin-bottom": 30,
  "control-center-margin-right": 10,
  "control-center-margin-left": 0,
  "control-center-layer": "top",
  "notification-icon-size": 20,
  "notification-body-image-height": 20,
  "notification-body-image-width": 20,
  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "control-center-width": 160,
  "notification-window-width": 250,
  "cssPriority": "user",
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "scripts": {
    "example-script": {
      "exec": "echo 'Do something...'",
      "urgency": "Normal"
    }
  },
  "notification-visibility": {
    "example-name": {
      "state": "muted",
      "urgency": "Low",
      "app-name": "Spotify"
    }
  },
  "widgets": [
    "menubar",
    "backlight",
    "volume",
    "mpris",
    "title",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "Clear"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "label": {
      "max-lines": 1,
      "text": "Controll Center"
    },
    "mpris": {
      "image-size": 64,
      "image-radius": 12
    },
    "backlight": {
      "label": "",
      "device": "intel_backlight",
      "min": 5
    },
    "volume": {
      "label": ""
    },
    "menubar":{
      "menu#settings": {
        "label":"",
        "position": "right",
        "actions": [
          {
            "label": "",
            "command": "~/.config/rofi/rofi-wifi-menu.sh"
          },
          {
            "label": "",
            "command": "~/.config/rofi/rofi-bluetooth"
          },
          {
            "label": "",
            "command": ""
          }
        ]
      },
      "menu#powermode":{
        "label": "",
        "position": "right",
        "actions": [
          {
            "label": "󰾆",
            "command": "powerprofilesctl set power-saver"
          },
          {
            "label": "󰾅",
            "command": "powerprofilesctl set balanced"
          },
          {
            "label": "󰓅",
            "command": "powerprofilesctl set performance"
          }        
        ]
      }
    }
  }
}